@{ 
    Layout = null;
}
@using lb2.Models
@model lb2.Models.DrinkData

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css"/>
    <title>@ViewBag.Title</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>
            Drink Type: @Html.DropDownListFor(m => m.drinkType, new SelectList(Enum.GetValues(typeof(DrinkType))),
           "Select Drink Category")
        </p>
        <p>Milk: @Html.TextBoxFor(x => x.milk)</p>
        <p>Sugar: @Html.TextBoxFor(x => x.sugar)</p>
        <input type="submit" value="ok"/>
    }
</body>
</html>

